<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.RobotoTitle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="TextAppearance.RobotoDescription">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="TextAppearance.RobotoDescriptionSmall">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/description_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.RobotoTitleBold">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ButtonText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>